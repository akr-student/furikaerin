= link_to 'Show as Markdown', board_path(@board, format: :md), target: '_blank', rel: 'noopener noreferrer'

%section.board-container
  - @board.categories.order(:id).each do |category|
    %section.category-container
      %h2= category.title
      %ul.js-card-list
        = render partial: 'cards/card', collection: category.cards.rank(:rank), layout: 'list'
        %li= link_to 'Add', board_category_cards_path(@board, category), method: :post, remote: true

%ul.hidden
  = render partial: 'cards/card_form', collection: @board.cards.order(:id), layout: 'list', as: :card
